$font-family-data: 'Nitti', Verdana, Helvetica, Roboto, Arial, sans-serif;
$body-font-color: #222;
$blueprint-light-gray:    #F7F7F7;
$blueprint-gray:          #DDDDDD;
$blueprint-medium-gray:   #707070;
$blueprint-dark-gray:     #474747;

/* Font for data display */

@font-face {
  font-family: 'Nitti';
  src: url('//fonts.voxmedia.com/editorial-apps/nitti/nittigrotesk-normal-v20.eot');
  src: url('//fonts.voxmedia.com/editorial-apps/nitti/nittigrotesk-normal-v20.eot#iefix') format('embedded-opentype'),
       url('//fonts.voxmedia.com/editorial-apps/nitti/nittigrotesk-normal-v20.woff') format('woff'),
       url('//fonts.voxmedia.com/editorial-apps/nitti/nittigrotesk-normal-v20.woff2') format('woff2');
  font-weight: 400;
  font-style: normal;
}

@font-face {
  font-family: 'Nitti-Bold';
  src: url('//fonts.voxmedia.com/editorial-apps/nitti/nittigrotesk-bold-v20.eot');
  src: url('//fonts.voxmedia.com/editorial-apps/nitti/nittigrotesk-bold-v20.eot#iefix') format('embedded-opentype'),
       url('//fonts.voxmedia.com/editorial-apps/nitti/nittigrotesk-bold-v20.woff') format('woff'),
       url('//fonts.voxmedia.com/editorial-apps/nitti/nittigrotesk-bold-v20.woff2') format('woff2');
  font-weight: 700;
  font-style: normal;
}
